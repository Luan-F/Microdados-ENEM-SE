@model IEnumerable<DadosGeraisViewModel>
<style>
    /* Definições gerais */
    body {
        font-family: 'Arial', sans-serif;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Estilos da tabela */
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 12px 15px;
        text-align: left;
    }

    th {
        background-color: #f0f0f0;
        color: #333;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

</style>
<div class="container-fluid mx-auto p-4">

    <h1 class="text-3xl font-bold mb-4">Dados Gerais por Município</h1>

    <div class="overflow-x-auto">
        <table class="table-auto w-full bg-white shadow-md rounded-lg table-responsive">
            <thead>
                <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                    <th class="py-3 px-6 text-left">Município</th>
                    <th class="py-3 px-6 text-left">Média Nota CN</th>
                    <th class="py-3 px-6 text-left">Média Nota CH</th>
                    <th class="py-3 px-6 text-left">Média Nota LC</th>
                    <th class="py-3 px-6 text-left">Média Nota MT</th>
                    <th class="py-3 px-6 text-left">Nota Total</th>
                    <th class="py-3 px-6 text-left">Média Nota Comp1</th>
                    <th class="py-3 px-6 text-left">Média Nota Comp2</th>
                    <th class="py-3 px-6 text-left">Média Nota Comp3</th>
                    <th class="py-3 px-6 text-left">Média Nota Comp4</th>
                    <th class="py-3 px-6 text-left">Média Nota Comp5</th>
                    <th class="py-3 px-6 text-left">Média Nota Redação</th>
                </tr>
            </thead>
            <tbody class="text-gray-600 text-sm font-light">
                @foreach (var item in Model)
                {
                    <tr class="border-b border-gray-200 hover:bg-gray-100">
                        <td class="py-3 px-6 text-left whitespace-nowrap">@item.NomeMunicipio</td>
                        <td class="py-3 px-6 text-left whitespace-nowrap">@item.MediaNotaCN</td>
                        <td class="py-3 px-6 text-left whitespace-nowrap">@item.MediaNotaCH</td>
                        <td class="py-3 px-6 text-left whitespace-nowrap">@item.MediaNotaLC</td>
                        <td class="py-3 px-6 text-left whitespace-nowrap">@item.MediaNotaMT</td>
                        <td class="py-3 px-6 text-left whitespace-nowrap">@item.NotaTotal</td>
                        <td class="py-3 px-6 text-left whitespace-nowrap">@item.MediaNotaComp1</td>
                        <td class="py-3 px-6 text-left whitespace-nowrap">@item.MediaNotaComp2</td>
                        <td class="py-3 px-6 text-left whitespace-nowrap">@item.MediaNotaComp3</td>
                        <td class="py-3 px-6 text-left whitespace-nowrap">@item.MediaNotaComp4</td>
                        <td class="py-3 px-6 text-left whitespace-nowrap">@item.MediaNotaComp5</td>
                        <td class="py-3 px-6 text-left whitespace-nowrap">@item.MediaNotaRedacao</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
